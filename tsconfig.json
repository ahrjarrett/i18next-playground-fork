{
  "exclude": ["dist"],
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true
  }
}
